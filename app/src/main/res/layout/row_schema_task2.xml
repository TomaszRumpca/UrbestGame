<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/group_icon"
        android:layout_width="@dimen/group_icon_circle_size"
        android:layout_height="@dimen/group_icon_circle_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/iko" />

    <TextView
        android:id="@+id/task_title"
        style="@style/tasksTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/group_icon" />

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/task"
        android:src="@drawable/lock" />

    <TextView
        android:id="@+id/points"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/lockIcon"
        android:background="@drawable/points_background"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/checked_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/points"
        android:contentDescription="@string/task"
        android:src="@drawable/check"
        android:visibility="invisible" />

</RelativeLayout>